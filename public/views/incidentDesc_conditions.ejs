<div class="row">
	<fieldset id="incidentDesc">
		<legend>Incident Description</legend>
		<div class="row">
			<div class="small-12 columns">
				<textarea id="incidentDescription" name="incidentDescription" placeholder="Describe the incident" required></textarea>
			</div>
		</div>
		<div class="row">
			<div class="small-12 columns" id="statementTaker">
				<span class="label">Statement taken by:</span><br>
			</div>
		</div>
	</fieldset>
</div>
<div class="row">
	<fieldset id="conditions">
		<legend>Site Conditions</legend>
		<div class="row">
			<div class="small-12 columns">
				<span class="label">Surface at scene?</span><br>
				<input type="checkbox" name="sceneSurface" id="surfacePowder" value="powder"><label for="surfacePowder">Powder</label>
				<input type="checkbox" name="sceneSurface" id="surfacePacked" value="packedpowdr"><label for="surfacePacked">Packed Powder</label>
				<input type="checkbox" name="sceneSurface" id="surfaceHard"  value="pardpacked"><label for="surfaceHard">Hard Packed</label>
				<input type="checkbox" name="sceneSurface" id="surfaceVariable" value="variable"><label for="surfaceVariable">Variable</label>
				<input type="checkbox" name="sceneSurface" id="surfaceCorn" value="corn"><label for="surfaceCorn">Corn</label>
				<input type="checkbox" name="sceneSurface" id="surfaceGranular" value="granular"><label for="surfaceGranular">Granular</label>
				<input type="checkbox" name="sceneSurface" id="surfaceWet"  value="wet"><label for="surfaceWet">Wet</label>
				<input type="checkbox" name="sceneSurface" id="surfaceOther" value="other"><label for="surfaceOther">Other</label>
				<input name="sceneSurfaceOther" id="sceneSurfaceOther" type="text" placeholder="Other">
			</div>
		</div>
		<div class="row">
			<div class="small-7 columns">
				<span class="label">Visibility?</span><br>
				<input type="checkbox" name="visibility" id="visClear" value="Clear"><label for="visClear">Clear</label>
				<input type="checkbox" name="visibility" id="visOvercast" value="Overcast"><label for="visOvercast">Overcast</label>
				<input type="checkbox" name="visibility" id="visFog" value="Fog"><label for="visFog">Fog</label>
				<input type="checkbox" name="visibility" id="visSnow" value="Snowing"><label for="visSnow">Snowing</label>
				<input type="checkbox" name="visibility" id="visRain" value="Raining"><label for="visRain">Raining</label>
				<input type="checkbox" name="visibility" id="visSnowMaking" value="Snowmaking"><label for="visSnowMaking">Snowmaking near scene</label>
			</div>
			<div class="small-3 columns end">
				<span class="label">Temperature?</span><br>
				<input type="radio" name="temperature" id="temperatureCold" value="Below0"><label for="temperatureCold">Below 0</label>
				<input type="radio" name="temperature" id="temperatureMild" value="0-32"><label for="temperatureMild">0 - 32</label>
				<input type="radio" name="temperature" id="temperatureWarm" value="Above32"><label for="temperatureWarm">Above 32</label>
			</div>
		</div>
		<div class="row">
			<div class="small-3 columns end">
				<span class="label">Wind?</span><br>
				<input type="radio" name="wind" id="windCalm" value="Calm"><label for="windCalm">Calm</label>
				<input type="radio" name="wind" id="windMod" value="Moderate"><label for="windMod">Moderate</label>
				<input type="radio" name="wind" id="windHigh" value="High"><label for="windHigh">High</label>
			</div>
		</div>
	</fieldset>
</div>