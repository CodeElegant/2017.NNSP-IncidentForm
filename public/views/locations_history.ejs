<div class="row">
	<fieldset id="locations">
		<legend>Location</legend>
		<div class="row">
			<div class="small-3 columns">
				<span class="label">Incident Location</span><br>
				<input name="location" id="locationLift" value="Lift" type="radio" required><label for="locationLift">Lift</label>
				<input name="location" id="locationHill" value="Hill" type="radio" required><label for="locationHill">Hill</label>
				<input name="location" id="locationPremise" value="Premise" type="radio" required><label for="locationPremise">Premise</label>
			</div>
			<div class="small-2 columns" id="lifts">
				<span class="label">Choose</span><br>
				<select size="1" class="select" name="whichLift" id="whichLift">
					<option value="" disabled selected>CHOOSE LIFT</option>
				</select>
			</div>
			<div class="small-2 columns" id="hills">
				<span class="label">Choose</span><br>
				<select size="1" class="select" name="whichHill" id="whichHill">
					<option value="" disabled selected>CHOOSE HILL</option>
				</select>
			</div>
			<div class="small-5 columns end">
				<span class="label">Specific Location</span><br>
				<textarea name="specificLocation" id="specificLocation" placeholder="Describe specific location" required></textarea>
			</div>
			<input id="hillLift" name="hillLift" type="hidden">
			<input id="difficulty" name="difficulty" type="hidden">
		</div>
	</fieldset>
	<fieldset id="history">
		<legend>Skiing History</legend>
		<div class="row">
			<div class="small-4 columns">
				<span class="label">Ability</span><br>
				<input name="ability" id="abilityBeginner" value="Beginner" type="radio" required><label for="abilityBeginner">Beginner</label>
				<input name="ability" id="abilityIntermediate" value="Intermediate" type="radio" required><label for="abilityIntermediate">Intermediate</label>
				<input name="ability" id="abilityExpert" value="Expert" type="radio" required><label for="abilityExpert">Expert</label>
				<input name="ability" id="abilityNA" value="N/A" type="radio" required><label for="abilityNA">N/A</label>
			</div>
			<div class="small-2 columns">
				<span class="label">In Lesson?</span><br>
				<input name="inLesson" id="lessonYes" value="Yes" type="radio" required><label for="lessonYes">Yes</label>
				<input name="inLesson" id="lessonNo" value="No" type="radio" required><label for="lessonNo">No</label>
			</div>
			<div class="small-6 columns" id="instYes">
				<span class="label">Instructor</span><br>
				<input name="instructor" id="instructor" type="text" placeholder="Instructor name">
			</div>
		</div>
		<div class="row">
			<div class="small-3 columns">
				<span class="label">Number of times on?</span><br>
				<input name="numTimes" id="timesHill" value="Hill" type="radio"><label for="timesHill">Hill</label>
				<input name="numTimes" id="timesLift" value="Lift" type="radio"><label for="timesLift">Lift</label>
				<input name="numTimes" id="timesOther" value="Other" type="radio"><label for="timesOther">Other</label>
			</div>
			<div class="small-3 columns" id="otherNum">
				<span class="label">Where?</span><br>
				<input name="numOther" id="numOther" placeholder="Other Location?" type="text">
			</div>
			<div class="small-1 columns">
				<span class="label">Today</span><br>
				<input type="number" min="0" max="20" step="1" name="qtyTimesToday" id="numTimesToday">
			</div>
			<div class="small-1 columns">
				<span class="label">Prior</span><br>
				<input name="qtyTimesPrior" id="numTimesPrior" type="number" min="0" max="20" step="1">
			</div>
			<div class="small-4 columns end">
				<span class="label">Equipment Removed By:</span><br>
				<input name="equipmentRemoval" id="removeFall" value="Fall" type="radio" required><label for="removeFall">Fall</label>
				<input name="equipmentRemoval" id="removeInjured" value="Injured" type="radio" required><label for="removeInjured">Injured</label>
				<input name="equipmentRemoval" id="removePatrol" value="Patrol" type="radio" required><label for="removePatrol">Patrol</label>
				<input name="equipmentRemoval" id="removeOther" value="Other" type="radio" required><label for="removeOther">Other</label>
			</div>
		</div>
	</fieldset>
</div>